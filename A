effectsButton.Text = "Effects"

-- Settings function
local function settingsFunction()
    -- Create settings menu
    local settingsMenu = Instance.new("Frame")
    settingsMenu.Parent = gui
    settingsMenu.BackgroundColor3 = Color3.new(0, 0, 0)
    settingsMenu.BackgroundTransparency = 0.5
    settingsMenu.Size = UDim2.new(0, 200, 0, 150)
    settingsMenu.Position = UDim2.new(0, 50, 0, 50)

    -- Animation speed slider
    local animationSpeedSlider = Instance.new("Slider")
    animationSpeedSlider.Parent = settingsMenu
    animationSpeedSlider.BackgroundColor3 = Color3.new(0, 0, 0)
    animationSpeedSlider.BackgroundTransparency = 0.5
    animationSpeedSlider.Size = UDim2.new(0, 150, 0, 20)
    animationSpeedSlider.Position = UDim2.new(0, 25, 0, 25)
    animationSpeedSlider.MinValue = 0.1
    animationSpeedSlider.MaxValue = 5
    animationSpeedSlider.Value = settings.animationSpeed

    -- Effect intensity slider
    local effectIntensitySlider = Instance.new("Slider")
    effectIntensitySlider.Parent = settingsMenu
    effectIntensitySlider.BackgroundColor3 = Color3.new(0, 0, 0)
    effectIntensitySlider.BackgroundTransparency = 0.5
    effectIntensitySlider.Size = UDim2.new(0, 150, 0, 20
