-- Services
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")

-- GUI
local gui = Instance.new("ScreenGui")
local mainFrame = Instance.new("Frame")
local title = Instance.new("TextLabel")
local settingsButton = Instance.new("TextButton")
local effectsButton = Instance.new("TextButton")

-- Customizable settings
local settings = {
    animationSpeed = 1,
    effectIntensity = 1
}

-- Load GUI
gui.Parent = game.Players.LocalPlayer.PlayerGui
mainFrame.Parent = gui
mainFrame.BackgroundColor3 = Color3.new(0, 0, 0)
mainFrame.BackgroundTransparency = 0.5
mainFrame.Size = UDim2.new(0, 300, 0, 200)
mainFrame.Position = UDim2.new(0, 50, 0, 50)

title.Parent = mainFrame
title.Font = Enum.Font.SourceSans
title.FontSize = Enum.FontSize.Size24
title.TextColor3 = Color3.new(1, 1, 1)
title.TextStrokeColor3 = Color3.new(0, 0, 0)
title.TextStrokeTransparency = 0.5
title.Text = "Fluxus Lua Script"

settingsButton.Parent = mainFrame
settingsButton.BackgroundColor3 = Color3.new(0, 0, 0)
settingsButton.BackgroundTransparency = 0.5
settingsButton.Size = UDim2.new(0, 100, 0, 30)
settingsButton.Position = UDim2.new(0, 50, 0, 70)
settingsButton.Font = Enum.Font.SourceSans
settingsButton.FontSize = Enum.FontSize.Size18
settingsButton.TextColor3 = Color3.new(1, 1, 1)
